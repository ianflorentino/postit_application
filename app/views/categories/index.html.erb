<%= render 'shared/content_title', title: "All Categories" %>

<div class="row">
  <div class="span8 well">
    <% if logged_in? && current_user.admin? %>
      <%= link_to 'New Category +', new_category_path, class: 'btn' %>
    <% end %>
    <ul>
      <% @categories.each do |category| %>
      <h4><li><%= link_to("#{category.name} (#{category.posts.size})", category_path(category))%></li></h4>
      <% end %>
    </ul>
  </div>
</div>

