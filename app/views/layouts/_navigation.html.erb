<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
  <li>
    <%= link_to "Categories", categories_path %>
  </li>
</ul>
<p class="pull-right">
  <% if logged_in? %>
    <div class="nav_item">
      <%= link_to 'New Post', new_post_path, class: 'btn btn-primary btn-small' %>
    </div>
    <div class="nav_item">
      <div class="btn-group">
        <a class="btn dropdown-toggle btn-small" data-toggle="dropdown" href="#">
        <%= current_user.username %>
        <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to user_path(current_user) do %>
              <i class='icon-user'></i>
              View Profile
            <% end %>
          </li>
          <li>
            <%= link_to edit_user_path(current_user) do %>
              <i class="icon-pencil"></i>
              Edit Profile
             <% end %>
          </li>
          <li>
            <%= link_to logout_path do %>
              <i class="icon-thumbs-down"></i>
              Logout
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% else %>
    <div class="nav_item">
      <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
    </div>
    <div class="nav_item">
      <%= link_to "Login", login_path, class: 'btn btn-small' %>
    </div>
  <% end %>
</p>



